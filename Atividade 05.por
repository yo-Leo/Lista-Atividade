programa {
  funcao inicio() {
    inteiro num1, num2, num3

    real media

    escreva ("Digite o primeiro número: ")
    leia (num1)
    escreva ("\n")
    escreva ("Digite o segundo número: ")
    leia (num2)
    escreva ("\n")
    escreva ("Digite o terceiro número: ")
    leia (num3)
    escreva ("\n")

    media = (num1+num2+num3)/3

    escreva ("A Media entre ", num1,", ", num2," e ", num3," é ", media) 
  }
}
